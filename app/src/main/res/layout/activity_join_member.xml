<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="kr.apptive.binbang.JoinMemberActivity">

    <View
        android:id="@+id/top_m"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical"
        android:background="#FFC627">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFC627">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="4dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@drawable/back_btn"
            android:background="@android:color/transparent"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/loading_logo"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/man2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="bottom"
                    android:text="회원가입"
                    android:textColor="#3E3E3E"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="bottom"
                    android:text="일반회원"
                    android:textColor="#3E3E3E"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="소속 부동산\n대표님 아이디"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/edit_join_ceo"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_join_edit"/>
                <Button
                    android:id="@+id/btn_join_ceo_check"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="조회하기"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:text="대표님의 아이디를 모르시면 대표자님께 먼저 문의 하세요."
                android:textColor="#3E3E3E"
                android:textSize="12sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="아이디"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/edit_join_id"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_join_edit"/>
                <Button
                    android:id="@+id/btn_join_id_check"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="중복확인"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="이름"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/edit_join_name"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_join_edit"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="비밀번호"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/edit_join_pw"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:textSize="14sp"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_join_edit"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="비밀번호 확인"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/edit_join_repw"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:textSize="14sp"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_join_edit"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="직함"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/edit_join_title"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_join_edit"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="휴대폰"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/edit_join_phone"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:layout_gravity="center_vertical"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textSize="14sp"
                    android:hint="ex) - 없이"
                    android:textColorHint="#BDBDBD"
                    android:background="@drawable/border_join_edit"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="일반전화"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/edit_join_call"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:layout_gravity="center_vertical"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textSize="14sp"
                    android:hint="ex) - 없이"
                    android:textColorHint="#BDBDBD"
                    android:background="@drawable/border_join_edit"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="이메일"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/edit_join_email"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:layout_gravity="center_vertical"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:textSize="14sp"
                    android:background="@drawable/border_join_edit"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_join_cancel"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="취소"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/join_btn"/>
                <Button
                    android:id="@+id/btn_join_ok"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="가입완료"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:background="@drawable/join_btn"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

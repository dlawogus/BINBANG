<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:background="#fff"
    android:orientation="vertical">

    <Button
        android:id="@+id/_more"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/more_btn"
        android:text="더보기"
        android:textSize="15sp"
        android:textColor="#fff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/_more"
        android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="2dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/notice"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_gravity="center_vertical"
                android:text="공지사항"
                android:textColor="#000"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_notice"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay_notice_1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#BDBDBD">

                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:background="#F2F2F2">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:background="#000"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/notice_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:singleLine="true"
                    android:text="test1"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:background="@drawable/notice_btn"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"/>

            <LinearLayout
                android:id="@+id/lay_notice_2"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:background="#F2F2F2">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:background="#000"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/notice_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:singleLine="true"
                    android:text="test2"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:background="@drawable/notice_btn"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"/>

            <LinearLayout
                android:id="@+id/lay_notice_3"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:background="#F2F2F2">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:background="#000"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/notice_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:singleLine="true"
                    android:text="test2"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:background="@drawable/notice_btn"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"/>

            <LinearLayout
                android:id="@+id/lay_notice_4"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:background="#F2F2F2">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:background="#000"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/notice_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:singleLine="true"
                    android:text="test2"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:background="@drawable/notice_btn"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"/>

            <LinearLayout
                android:id="@+id/lay_notice_5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#BDBDBD">

                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="#F2F2F2">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:background="#000"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/notice_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:singleLine="true"
                    android:text="test2"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:background="@drawable/notice_btn"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>

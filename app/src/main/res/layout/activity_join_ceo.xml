                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="사업장 주소"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:text="부산시"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/edit_join_juso_gu"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_vertical"
                    android:hint="구명"
                    android:background="@drawable/border_join_edit"/>
                <EditText
                    android:id="@+id/edit_join_juso_dong"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_vertical"
                    android:hint="동명"
                    android:background="@drawable/border_join_edit"/>
                <EditText
                    android:id="@+id/edit_join_juso_sangse"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:textSize="12sp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_vertical"
                    android:hint="상세주소"
                    android:background="@drawable/border_join_edit"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="대표전화번호"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/edit_join_phone"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_vertical"
                    android:hint="ex) - 없이"
                    android:background="@drawable/border_join_edit"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="팩스번호"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/edit_join_fax"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_vertical"
                    android:hint="ex) - 없이"
                    android:background="@drawable/border_join_edit"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="대표자 이메일"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/edit_join_email"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:paddingLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_join_edit"/>
            </LinearLayout>

